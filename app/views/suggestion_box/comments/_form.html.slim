= simple_form_for [commentable, commentable.comments.new], remote: true do |f|
  = f.input :comment, label: false, input_html: { class: 'form-control' }, placeholder: 'Введите комментарий'
  = f.hidden_field :commentable_id, value: commentable.id
  = f.hidden_field :commentable_type, value: commentable.class

  = button_tag type: :submit, class: 'btn btn-success' do
    span Отправить
